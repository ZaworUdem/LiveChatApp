<h1 align="center">Welcome to LiveChat - <em>a complete <b>Chat App</b></em></h1> 

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off icon"></i>
  Sign up!
</h4>

<div class="ui placeholder segment">
  <div class="ui one column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:user, html: {class: "ui form", role: "form"}, url: signup_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username"%>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Your username"%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Your password"%>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Sign up", class: "ui orange submit button" %>
      <% end %>
    </div>
  </div>
</div>